<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mrbutlerapplication">

    <uses-permission android:name="android.Manifest.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MrButlerApplication">
        <activity
            android:name=".model.HistoryActivity"
            android:exported="false"
            android:label="@string/title_activity_salary_page"
            android:theme="@style/Theme.MrButlerApplication.NoActionBar" />
        <activity
            android:name=".SalaryPage"
            android:exported="false"
            android:label="@string/title_activity_salary_page"
            android:theme="@style/Theme.MrButlerApplication.NoActionBar" />
        <activity
            android:name=".DetailedActivity"
            android:exported="false" />
        <activity
            android:name=".AddTransactionActivity"
            android:exported="false" />
        <activity
            android:name=".BookingsCard"
            android:exported="false" />
        <activity
            android:name=".ButlerProfileCard"
            android:exported="false" />
        <activity android:name=".chats.ChatLogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chats.LatestMessagesActivity" />
        </activity>
        <activity android:name=".chats.NewMessageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".chats.LatestMessagesActivity" />
        </activity>
        <activity
            android:name=".chats.LatestMessagesActivity"
            android:exported="true" />
        <activity
            android:name=".authentication.LoginPage"
            android:exported="false" />
        <activity
            android:name=".authentication.RegisterPage"
            android:exported="false" />
        <activity
            android:name=".ChatPage"
            android:exported="false" />
        <activity
            android:name=".SplashPage"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.MenuPage"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/roundcorner" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>