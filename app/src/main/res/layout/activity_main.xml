<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/welcomeBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="WHO'S WORKING?"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:textSize="34sp" />

    <LinearLayout
        android:id="@+id/butlerImageRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_below="@id/welcomeBanner">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/loginBtn1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:onClick="login"
            android:src="@drawable/butler1"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/loginBtn2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:onClick="login"
            android:src="@drawable/butler2"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/butlerNameRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/butlerImageRow1"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/username_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Bryan"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/username_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Ivan"
            android:textSize="18sp"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/butlerImageRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/butlerNameRow1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/loginBtn3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:onClick="login"
            android:src="@drawable/butler3"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/loginBtn4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:onClick="login"
            android:src="@drawable/butler4"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/butlerNameRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/butlerImageRow2"
        android:layout_marginTop="18dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/username_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="RJ"
            android:textAlignment="center"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/username_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Patrick"
            android:textAlignment="center"
            android:textSize="18sp" />
    </LinearLayout>


</RelativeLayout>